<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.notepad.AddNote">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:checkedButton="@+id/css"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/css"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/css"
                android:checked="true"
                android:text="css" />

            <RadioButton
                android:id="@+id/js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/js"
                android:checked="false"
                android:text="js" />

            <RadioButton
                android:id="@+id/wp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wp"
                android:checked="false"
                android:text="wp" />

            <RadioButton
                android:id="@+id/html"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/html"
                android:checked="false"
                android:text="html" />

        </RadioGroup>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_add_note" />


</android.support.design.widget.CoordinatorLayout>
